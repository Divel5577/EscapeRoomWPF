<Window x:Class="EscapeRoomWPF.Views.EndScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Koniec Gry"
        Width="400"
        Height="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Gratulacje!" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10" />
            <TextBlock Text="Uciekłeś!" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10" />
            <TextBlock Name="ElapsedTimeText" Text="Twój czas gry: --:--" FontSize="16" TextAlignment="Center" Margin="0,0,0,10" />
            <Button Content="Udostępnij wynik w Sieci!"
        Width="250"
        Height="40"
        Click="OnShareClick"
        Margin="0,10,0,0" />
            <Button Content="Pochwal się przez Messenger"
        Width="250"
        Height="40"
        Click="OnShareToFriendClick"
        Margin="0,10,0,0" />


            <Button Content="Wyjdź" Width="150" Height="40" Click="OnExitClick" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
