<Window x:Class="EscapeRoomWPF.Views.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Główne"
        Width="400"
        Height="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Escape Room" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" />
            <Button Content="Nowa Gra" Width="200" Height="40" Click="NewGame_Click" Margin="0,10,0,0" />
            <Button Content="Wczytaj Grę" Width="200" Height="40" Click="LoadGame_Click" Margin="0,10,0,0" />
            <Button Content="Wyjdź" Width="200" Height="40" Click="Exit_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
